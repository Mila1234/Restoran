<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rezervation_color_background"
    android:padding="@dimen/padding_margin">

    <TextView android:id = "@+id/item_order"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="koka kola bla bla bla"/>

    <TextView android:id = "@+id/number_item_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"/>
    <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_weight="1"
    />

    <Button  android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <CheckedTextView
        android:id="@+id/in_new_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/in_new_order"
        android:checked="false"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:shadowColor="#1132ec" />
</LinearLayout>